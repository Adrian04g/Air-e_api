# Auto detect text files and perform LF normalization
* text=auto eol=lf

# Python files
*.py text diff=python eol=lf
*.pyw text diff=python eol=lf

# Pipenv files
Pipfile text eol=lf
Pipfile.lock text eol=lf

# Django files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.md text eol=lf
*.rst text eol=lf

# Git config files
.gitattributes text eol=lf
.gitignore text eol=lf
.gitconfig text eol=lf

# Binary files
*.db binary
*.p binary
*.pkl binary
*.pickle binary
*.pyc binary
*.pyd binary
*.pyo binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.otf binary
*.svg text